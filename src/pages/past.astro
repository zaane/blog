---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SEO from "../components/SEO.astro";

const pageTitle = "Past | Zane Olds";
const pageDescription =
  "Background and skills from Zane Olds's earlier work across software, teaching, and language learning tools.";
const basePath = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const iconHref = `${basePath}orca.svg`;

const skillColor = "white";
const fontWeight = "bold";
const textCase = "uppercase";

const courses = [
  {
    name: "The Odin Project",
    url: "https://www.theodinproject.com/",
    description: "full stack javascript, html, css",
  },
  {
    name: "Full Stack Open",
    url: "https://fullstackopen.com/en/",
    description: "MERN stack, Typescript, authentication, testing",
  },
  {
    name: "Code With Andrea",
    url: "https://codewithandrea.com/",
    description: "Dart/Flutter, frontend architecture and testing",
  },
  {
    name: "Corso di programmazione in C",
    url: "https://www.youtube.com/watch?v=HjXBXBgfKyk&list=PLrEMgOSrS_3cFJpM2gdw8EGFyRBZOyAKY",
    description: "masterclass in C",
  },
];

const builds = [
  {
    name: "kilo text editor",
    url: "https://viewsourcecode.org/snaptoken/kilo/",
    description: "write a text editor using itself",
  },
  {
    name: "ugit",
    url: "https://www.leshenko.net/p/ugit/#",
    description: "you know the porcelain, now see the plumbing",
  },
  {
    name: "web browser",
    url: "https://browser.engineering",
    description: "you're telling me someone actually reads this stuff?",
  },
  {
    name: "8-bit computer",
    url: "https://www.youtube.com/@BenEater/courses",
    description: "just like Nintendo used to make",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={iconHref} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={pageTitle} description={pageDescription} />
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: white;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <main class="page page-shell">
      <Nav />
      <div class="page-content">
        <div class="education">
          <h2>past</h2>
          <h3>Education</h3>
          <p>
            I received my Bachelor of Science in Physics from the University of
            Texas at Dallas. Electives in math, computer science, literature,
            and philosophy. Research in nanotechnology.
          </p>
          <p>
            I feel very fortunate to have received a liberal education and I
            believe everyone deserves the right to have one of their own, free
            of charge. I am profoundly grateful to each of my instructors who
            showed me why their chosen field of study could be worth dedicating
            a lifetime to.
          </p>
        </div>
        <div class="previous">
          <h3>Other projects</h3>
          <p>
            Not everything I've done or made is easily demoable in its current
            state. Ask me about my homelab, scraping my own grocery data,
            simulating tabletop dice rolls, or trying to implement Italian
            grammar in code.
          </p>
        </div>
        <div class="courses">
          <h3>Courses</h3>
          <ul>
            {
              courses.map((course) => (
                <li>
                  <>
                    <a href={course.url}>{course.name}</a>
                    <span>({course.description})</span>
                  </>
                </li>
              ))
            }
          </ul>
        </div>
        <div class="builds">
          <h3>Builds</h3>
          <ul>
            {
              builds.map((build) => (
                <li>
                  <>
                    <a href={build.url}>{build.name}</a>
                    <span>({build.description})</span>
                  </>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </main>
  </body>
</html>

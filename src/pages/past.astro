---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SEO from "../components/SEO.astro";

const pageTitle = "Past | Zane Olds";
const pageDescription =
  "Background and skills from Zane Olds's earlier work across software, teaching, and language learning tools.";
const basePath = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const iconHref = `${basePath}orca.svg`;
const skills = ["JavaScript", "TypeScript", "React", "CSS", "HTML"];

const skillColor = "white";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={iconHref} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={pageTitle} description={pageDescription} />
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: white;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <Nav />
    <h1>past</h1>
    <p></p>
    <p></p>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
  </body>
</html>

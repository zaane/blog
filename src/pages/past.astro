---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import SEO from "../components/SEO.astro";

const pageTitle = "Past | Zane Olds";
const pageDescription =
  "Background and skills from Zane Olds's earlier work across software, teaching, and language learning tools.";
const basePath = import.meta.env.BASE_URL.endsWith("/")
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;
const iconHref = `${basePath}orca.svg`;
const skills = ["JavaScript", "TypeScript", "React", "CSS", "HTML"];

const skillColor = "white";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={iconHref} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={pageTitle} description={pageDescription} />
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: white;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <main class="page page-shell">
      <Nav />
      <h2>education</h2>
      <p>
        B.S. in Physics from the University of Texas at Dallas. Electives in
        math, computer science, literature, and philosophy. Research in
        nanotechnology.
      </p>
      <p>
        I feel very fortunate to have received a liberal education and I believe
        everyone deserves the right to have one free of charge. I am profoundly
        grateful to each of my instructors who showed me why their chosen field
        of study could be worth dedicating a lifetime to.
      </p>
      <h2>past adventures</h2>
      <p>
        Ask me about my homelab, scraping my own grocery data, simulating
        tabletop dice rolls, or implementing Italian grammar in code.
      </p>
    </main>
  </body>
</html>
